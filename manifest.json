{
  "manifest_version": 2,

  "name": "gotokindle",
  "description": "This extension will clear the page to make it more readable, and send it to your kindle as your wish.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "icons": {
    "128": "images/icon.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "readability/pretty.html"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
